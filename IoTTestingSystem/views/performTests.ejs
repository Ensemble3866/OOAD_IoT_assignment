<!doctype html>
<html lang="zh-Hant">
  <head>
    <title>IoT相容性測試系統</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main_style.css">
    <style>
      .div_body{
          padding: 20px 0;
          max-width: 1500px;
          margin: 0 auto;
      }
      .div_foot{
        max-width: 700px;
        margin: 20px auto;
      }
      .form-check{
        margin-bottom: 0px;
      }
    </style>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="performTests">TS</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="performTests">執行測試 <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="historyRecord">歷史紀錄</a>
            </li>
          </ul>
          <span class="navbar-text">林亮勳(開發人員)</span>
          <button type="button" class="btn btn-light" onclick="logout()">登出</button>
        </div>
      </nav>
      <div class="div_headImg">
        <img src="/images/bg2.jpg" alt="image">
      </div>
    </header>
    <div class="container-fluid">
      <div class="div_body">
          <div class="row">
            <% for (key in categoryList) { %>
            <div class="col-sm">
              <div class="card">
                <div class="card-header">
                  <%= categoryList[key].category %>
                </div>
                <ul class="list-group list-group-flush">
                  <% for (index in categoryList[key].list) { %>
                  <li class="list-group-item"><div class="form-check"><label class="form-check-label"><input class="form-check-input" data-category="<%= categoryList[key].list[index].category %>" type="checkbox" value="<%= categoryList[key].list[index].name %>"> <%= categoryList[key].list[index].name %></label></div></li>
                  <% } %>
                </ul>
              </div>
            </div>
            <% } %>
          </div>
          <hr>
          <div class="div_foot">
              <div class="row">
                <div class="col-9">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon1">測試標題</span>
                    </div>
                    <input type="text" class="form-control" id="missionTitle" placeholder="請輸入標題" aria-label="測試標題" aria-describedby="basic-addon1">
                  </div>
                </div>
                <div class="col">
                  <button type="button" class="btn btn-primary btn-block" onclick="startTest()">開始測試</button>
                </div>
              </div>
          </div>
      </div>
    </div>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <!-- <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script> -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <script>
    function startTest(){

      var Phone = $('input:checkbox:checked[data-category="Phone"]').map(function() { return $(this).val(); }).get();
      console.log(Phone);
      var App = $('input:checkbox:checked[data-category="App"]').map(function() { return $(this).val(); }).get();
      console.log(App);
      var Frameware = $('input:checkbox:checked[data-category="Frameware"]').map(function() { return $(this).val(); }).get();
      console.log(Frameware);
      var Sensor = $('input:checkbox:checked[data-category="Sensor"]').map(function() { return $(this).val(); }).get();
      console.log(Sensor);
      var Config = $('input:checkbox:checked[data-category="Config"]').map(function() { return $(this).val(); }).get();
      console.log(Config);

      $.ajax({
        method: "GET",
        contentType:"application/json; charset=utf-8",
        url: "/createMission",
        data: {
          title: $('#missionTitle').val(),
          phone: Phone,
          app: App,
          frameware: Frameware,
          sensor: Sensor,
          config: Config
        }
      }).done(function() {
        location.href= ("sendTest");
      });

      
      
    }
    </script>

    <!-- jQuery -->
    <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> -->
    <!-- <script src="js/params.js"></script>
    <script src="js/server.js"></script> -->
  </body>
</html>
